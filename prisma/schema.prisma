generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(cuid())
  email         String   @unique
  name          String?
  plan          String   @default("free") // free, starter, pro, business
  credits       Int      @default(3)
  creditsUsed   Int      @default(0)
  videos        Video[]
  payments      Payment[]
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Video {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  title       String
  script      String
  hashtags    String   // JSON array
  voiceUrl    String?
  videoUrl    String?
  platform    String   @default("tiktok")
  quality     String   @default("720p") // 720p, 1080p, 4k
  watermark   Boolean @default(true)
  status      String   @default("pending") // pending, processing, completed, failed
  duration    Int?
  createdAt   DateTime @default(now())
}

model Payment {
  id              String   @id @default(cuid())
  userId          String
  user            User     @relation(fields: [userId], references: [id])
  amount          Int
  credits         Int      @default(0)
  plan            String?  // starter, pro, business
  status          String   @default("pending") // pending, completed, failed
  paymentMethod   String   @default("promptpay") // promptpay, truemoney
  promptpayNumber String?
  qrCodeUrl       String?
  transactionId   String?
  expiresAt       DateTime
  completedAt     DateTime?
  createdAt       DateTime @default(now())
}
