generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String    @id @default(cuid())
  email            String    @unique
  name             String?
  image            String?
  password         String?
  phone            String?
  emailVerified    DateTime?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  
  accounts         Account[]
  sessions         Session[]
  videos           Video[]
  subscriptions    Subscription[]
  payments         Payment[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Subscription {
  id                String   @id @default(cuid())
  userId            String
  plan              String   // free, pro, business
  stripeCustomerId String?
  stripeSubId      String?
  status            String   // active, canceled, past_due
  creditsUsed      Int      @default(0)
  creditsLimit     Int      @default(3)
  currentPeriodEnd DateTime?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Video {
  id          String   @id @default(cuid())
  userId      String
  title       String
  script      String?
  status      String   // pending, processing, completed, failed
  videoUrl    String?
  thumbnailUrl String?
  duration    Int?
  platform    String?  // tiktok, youtube, instagram
  creditsCost Int      @default(1)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// Payment System Models
model Payment {
  id              String    @id @default(cuid())
  userId          String?
  amount          Int       // Amount in satang (1 Baht = 100 satang)
  refNo           String    @unique // Unique reference number
  plan            String    // pro, business
  status          String    @default("pending") // pending, completed, expired, cancelled
  
  // PromptPay specific
  promptpayPhone  String?
  qrCodeUrl       String?   // Generated QR code URL
  
  // Verification
  paidAt          DateTime?
  expiresAt       DateTime
  smsMessage      String?   // Original SMS message for verification
  
  // Metadata
  ipAddress       String?
  userAgent       String?
  
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  
  user            User?     @relation(fields: [userId], references: [id], onDelete: SetNull)
}

// SMS Log for debugging
model SmsLog {
  id          String   @id @default(cuid())
  from        String
  message     String
  rawMessage  String
  processed   Boolean  @default(false)
  paymentId   String?
  createdAt   DateTime @default(now())
}
